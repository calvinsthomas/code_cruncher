class Employee:

#storing employees first and last name then pay
    def __init__(self, first, last, pay):
        self.first = first
        self.last = last
        self.pay = pay

    def email(self):
        return '{}.{}@gmail.com'.format(self.first, self.last)

    def fullname(self):
        return '{}.{}'.format(self.first, self.last)
    
    def __repr__(self):
        return "Worker ('{}', '{}', ${})".format(self.first, self.last, self.pay)
